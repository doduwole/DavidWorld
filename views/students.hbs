<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Students</h2>
    <hr />
    {{#if students}}
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Student Num</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Status</th>
            <th>Course ID</th>
            <th></th> <!-- Empty header for the delete button column -->
          </tr>
        </thead>
        <tbody>
          {{#each students}}
          <tr>
            <td>{{this.studentNum}}</td>
            <td>{{this.firstName}} {{this.lastName}}</td>
            <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
            <td>{{this.addressStreet}}, {{this.addressCity}}, {{this.addressProvince}}</td>
            <td>{{this.status}}</td>
            <td>{{this.course}}</td>
            <td>
              <a href="/students/delete/{{this.studentNum}}" class="btn btn-danger">Remove</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{else}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/if}}
  </div>
</div>