<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Courses</h2>
    <hr />
    {{#if courses}}
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Course ID</th>
            <th>Course Code</th>
            <th>Course Description</th>
            <th></th> <!-- Empty header for the delete button column -->
          </tr>
        </thead>
        <tbody>
          {{#each courses}}
          <tr>
            <td>{{this.courseId}}</td>
            <td>{{this.courseCode}}</td>
            <td>{{this.courseDescription}}</td>
            <td>
              <a href="/course/{{this.courseId}}" class="btn btn-primary">Edit</a>
              <a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{else}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/if}}
  </div>
</div>