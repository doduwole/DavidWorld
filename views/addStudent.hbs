<div class="container">
  <div class="row">
    <main class="col-md-12">
      <h1>Personal Information</h1>

      <form method="POST" action="/students/add">
        <div class="form-row">
          <div class="col">
            <div class="form-group">
              <label for="firstName">First Name:</label>
              <input
                class="form-control"
                type="text"
                id="firstName"
                name="firstName"
                required
              />
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="lastName">Last Name:</label>
              <input
                class="form-control"
                type="text"
                id="lastName"
                name="lastName"
                required
              />
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email:</label>
          <input
            class="form-control"
            type="email"
            id="email"
            name="email"
            required
          />
        </div>

        <div class="form-row">
          <div class="col">
            <div class="form-group">
              <label for="streetAddress">Address (Street):</label>
              <input
                class="form-control"
                type="text"
                id="streetAddress"
                name="streetAddress"
                required
              />
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="city">Address (City):</label>
              <input
                class="form-control"
                type="text"
                id="city"
                name="city"
                required
              />
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="province">Address (Province):</label>
              <input
                class="form-control"
                type="text"
                id="province"
                name="province"
                required
              />
            </div>
          </div>
        </div>

        <h1>Academic Information</h1>

        <div class="form-row">
          <div class="col">
            <div class="form-group">
              <label for="isTA">College Employment:</label>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="isTA"
                  name="isTA"
                />
                <label class="form-check-label" for="isTA"
                  >Teaching Assistant</label
                >
              </div>
            </div>
          </div>

          <div class="col">
            <div class="form-group">
              <label for="enrollmentStatus">Enrollment Status:</label><br />
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="fullTime"
                  name="enrollmentStatus"
                  value="Full Time"
                />
                <label class="form-check-label" for="fullTime">Full Time</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="partTime"
                  name="enrollmentStatus"
                  value="Part Time"
                />
                <label class="form-check-label" for="partTime">Part Time</label>
              </div>
            </div>
          </div>

          <div class="col">
            <div class="form-group">
              <label for="enrolledCourses">Enrolled in Course:</label>
              <select
                class="form-control"
                id="enrolledCourses"
                name="enrolledCourses"
                single
              ></select>
            </div>
          </div>
        </div>

        <div class="text-right">
          <button type="submit" class="btn btn-primary">Add Student</button>
        </div>
        <script>
      document.addEventListener("DOMContentLoaded", function () {
        fetch("courses")
          .then((response) => response.json())
          .then((data) => {
            const enrolledCoursesSelect =
              document.getElementById("enrolledCourses");
            data.forEach((course) => {
              const option = document.createElement("option");
              option.value = course.courseCode;
              option.textContent = course.courseDescription;
              enrolledCoursesSelect.appendChild(option);
            });

            // Set the first course as the default selection
            enrolledCoursesSelect.selectedIndex = 0;
          })
          .catch((error) => {
            console.error("Failed to fetch courses data:", error);
          });
      });
    </script>
      </form>
    </main>
  </div>
</div>
